<% if f.object.errors[attribute].present? %>
  <div class="alert alert-error">
    <ul class="unstyled" style="margin-bottom: 0">
      <% f.object.errors[attribute].map { |msg| f.object.errors.full_message(attribute, msg) }.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
